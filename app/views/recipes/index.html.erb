<div class="row">
    <div class="col">
        <% @recipes.each_slice(3) do |recipes| %>
        <div class="row">
            <% recipes.each do |recipe| %>
            <div class="col-md-4">
                <div class="recipe">
                    <div class="image_wrapper">
                        <%= link_to recipe do %>
                        <%= image_tag recipe.image.url(:medium) %>
                        <% end %>
                    </div>
                    <h2>
                        <%= link_to recipe.title, recipe %> <br>
                        <%= recipe.created_at.strftime("%B, %d, %Y") %>
                    </h2>
                </div>
            </div>
            <% end %>
        </div>
        <% end %>
    </div>
</div>

